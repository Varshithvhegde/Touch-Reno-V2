<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ui.exit.ExitFragment">

    <ImageView
        android:id="@+id/header"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_account_circle_24" />

    <TextView
        android:id="@+id/accountheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:layout_centerHorizontal="true"
        android:text="MY ACCOUNT"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/header"/>

    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountheader"
        android:layout_alignLeft="@+id/email"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing=".15"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/lato_regular"
        android:padding="5dp" />

    <TextView
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_alignLeft="@+id/email"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing=".15"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_regular"
        android:inputType="textEmailAddress"
        android:padding="5dp" />

    <TextView
        android:id="@+id/txtmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/mobile"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing=".15"
        android:text="MOBILE"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mobile"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtmobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black"
        android:inputType="phone"
        android:padding="5dp" />

    <TextView
        android:id="@+id/txtaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile"
        android:layout_alignLeft="@+id/address"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing=".15"
        android:text="ADDRESS"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtaddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_regular"
        android:padding="5dp" />

    <TextView
        android:id="@+id/txtCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_alignLeft="@+id/address"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing=".15"
        android:text="Country"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/country"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCountry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/lato_regular"
        android:padding="5dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country"
        android:layout_alignLeft="@+id/address"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing=".15"
        android:text="State"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/state"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtState"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/lato_regular"
        android:padding="5dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/logout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/state"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/signupbtn"
        android:fontFamily="@font/lato_regular"
        android:text="Log out"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginVertical="0dp"
        android:layout_marginBottom="677dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="100"
        app:layout_anchorGravity="bottom">

        <LinearLayout
            android:id="@+id/homenav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_home_gray_24dp" />

            <View
                android:layout_width="84dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@color/common_google_signin_btn_text_dark" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cartnav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_shopping_cart_white_24dp" />

            <View
                android:layout_width="84dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@color/browser_actions_text_color"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ordernav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/orders_icon" />

            <View
                android:layout_width="84dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@color/browser_actions_text_color"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_account_circle_24" />

            <View
                android:layout_width="84dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@color/common_google_signin_btn_text_dark" />

        </LinearLayout>


    </LinearLayout>

